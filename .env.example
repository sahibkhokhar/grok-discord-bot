# ===== Discord =====
DISCORD_BOT_TOKEN=

# ===== Provider switching =====
# Set to: openai (recommended) or xai
AI_PROVIDER=openai

# ===== xAI (Grok) â€“ only if using AI_PROVIDER=xai =====
GROK_API_KEY=
MODEL=grok-3-mini

# ===== OpenAI (text + voice + images) =====
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5-nano

# ===== Core bot behavior =====
PROMPT="You are a helpful assistant; keep answers short and precise."
SEARCH_ENABLED=true
MAX_SEARCH_RESULTS=5
SHOW_SOURCES=true
WORD_CHUNK_SIZE=12
EDIT_COOLDOWN_SECONDS=1.5

# ===== Image generation (OpenAI GPT Image) =====
IMAGE_GEN_ENABLED=true
OPENAI_IMAGE_MODEL=gpt-image-1
IMAGE_SIZE=1024x1024          # 1024x1024 | 1024x1536 | 1536x1024 | auto
IMAGE_QUALITY=low             # low | medium | high | auto
IMAGE_BACKGROUND=auto         # transparent | auto
IMAGE_FORMAT=png              # png | jpeg | webp

# ===== Voice / TTS (OpenAI) =====
VOICE_ENABLED=true
# Only this user can run /join and /leave; others can still talk once it joins
VOICE_ALLOWED_USER_ID=
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy

# ===== Local tools (time, dice, calculator, text, Pocket TTS) =====
LOCAL_TOOLS_ENABLED=true
TTS_ENABLED=true

# ===== Random Chat (Optional) =====
RANDOM_CHAT_ENABLED=false
# Random interval between min and max minutes (dynamically chosen each time)
RANDOM_CHAT_INTERVAL_MIN_MINUTES=20
RANDOM_CHAT_INTERVAL_MAX_MINUTES=40
RANDOM_CHAT_CHANCE=0.25            # 0.0 to 1.0 (25% chance)
RANDOM_CHAT_RECENT_SECONDS=300     # Only chat if recent activity (5 minutes)
RANDOM_CHAT_CHANNEL_IDS=           # Comma-separated channel IDs